# Exchange System Environment Variables

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=exchange_db
POSTGRES_USER=exchange_user
POSTGRES_PASSWORD=exchange_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Service Ports
API_PORT=13000
WEBSOCKET_PORT=13765
WEB_PORT=12084

# DeCoin Integration
DECOIN_NODE_URL=http://host.docker.internal:11080
DECOIN_VALIDATOR_URL=http://host.docker.internal:11083

# Environment
ENVIRONMENT=development

# Security (change in production!)
JWT_SECRET_KEY=your-secret-key-change-in-production
API_KEY_SALT=your-salt-change-in-production

# Performance Tuning
MAX_ORDERS_PER_SECOND=1000000
MAX_WEBSOCKET_CONNECTIONS=10000
REDIS_MAX_CONNECTIONS=100

# Features
USE_BINARY_PROTOCOL=true
ENABLE_MARKET_SIMULATION=false
ENABLE_TEST_ACCOUNTS=true